package com.company;
import java.util.Scanner;
/*
"C" = correct letter and place
"W" = wrong place but correct letter
"I" = incorrect
*/
public class Wordle {
    public static void main(String[] args) {
        String guess = "";
        Scanner input = new Scanner(System.in);
        String[] wordleList = {"Debug", "Ascii", "Crash", "Write", "Break"};
        String wordleWord = wordleList[(int)(Math.random() * wordleList.length)];
        int guessesLeft = 6;
        System.out.println("You have " + guessesLeft + " guess(es) remaining.");
        while (!guess.equals(wordleWord) && guessesLeft > 0) {
            guess = input.nextLine();
            if (guess.length() < 5) {
                System.out.println("Not enough letters");
                continue;
            }
            if (guess.length() > 5) {
                System.out.println("Too many letters");
                continue;
            }
            for (int i = 0; i < wordleWord.length(); i++) {
                boolean correctGuess = false;
                for (int j = 0; j < wordleWord.length(); j++) {
                    if (guess.charAt(i) == wordleWord.charAt(i)) {
                        System.out.print("C ");
                        correctGuess = true;
                        break;
                    }
                    if (guess.charAt(i) == wordleWord.charAt(j)) {
                        System.out.print("W ");
                        break;
                    }
                }
                if (!correctGuess){
                    System.out.print("I ");
                }
            }
            System.out.println("");
        }
        if (guess.equals(wordleWord)) {
            System.out.println("Well Done");
        }
        else {
            System.out.println("Farce");
        }
    }
}
